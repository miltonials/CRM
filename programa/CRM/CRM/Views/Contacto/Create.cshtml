@model CRM.Models.Contacto

@{
    ViewData["Title"] = "Create";
    int exito = (int)ViewData["Exito"];
}



<h1>Registro de nuevo contacto</h1>

@if (exito == -1)
{
    <div class="alert alert-danger" role="alert">
        <p>
            El contacto seleccionado no tiene una cuenta registrada en el sistema.
            Por favor, registre una cuenta para el contacto.
        </p>
    </div>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Cliente</label>
                <select asp-for="CedulaCliente" class="form-control">
                    @foreach (CuentaCliente item in ViewBag.CedulaCliente)
                    {
                        <option value="@item.CedulaCliente">@item.CedulaClienteNavigation.Nombre @item.CedulaClienteNavigation.Apellido1 @item.CedulaClienteNavigation.Apellido2 | @item.CedulaClienteNavigation.Cedula</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Asesor / Usuario</label>
                <select asp-for="CedulaUsuario" class="form-control">
                    @foreach (Usuario item in ViewBag.CedulaUsuario)
                    {
                        <option value="@item.Cedula">@item.Nombre @item.Apellido1 @item.Apellido2 | @item.Cedula</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="TipoContacto" class="control-label"></label>
                <select asp-for="TipoContacto" class="form-control">
                    @foreach (TipoContacto item in ViewBag.TipoContacto)
                    {
                        <option value="@item.Id">@item.Tipo</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Motivo" class="control-label"></label>
                <input asp-for="Motivo" class="form-control" />
                <span asp-validation-for="Motivo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CorreoElectronico" class="control-label"></label>
                <input asp-for="CorreoElectronico" class="form-control" />
                <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="Estado" class="form-control">
                    @foreach (Estado item in ViewBag.Estado)
                    {
                        <option value="@item.Id">@item.Nombre</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <select asp-for="Direccion" class="form-control">
                    @foreach (Direccion item in ViewBag.Direccion)
                    {
                        <option value="@item.Id">@item.Id | @item.IdProvinciaNavigation.Nombre , @item.IdCantonNavigation.Nombre , @item.IdDistritoNavigation.Nombre</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdZona" class="control-label"></label>
                <select asp-for="IdZona" class="form-control">
                    @foreach (Zona item in ViewBag.IdZona)
                    {
                        <option value="@item.Id">@item.Nombre</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="IdSector" class="control-label"></label>
                <select asp-for="IdSector" class="form-control">
                    @foreach (Sector item in ViewBag.IdSector)
                    {
                        <option value="@item.Id">@item.Nombre</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar contacto" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>
<hr />

<div>
    <a asp-action="Index" class="btn btn-secondary">Ver todos los contactos</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
